---
interface Props {
  lang: 'de' | 'en';
}

const { lang } = Astro.props;

const content = {
  de: {
    headline: 'Bereit, Ihre WhatsApp-Kommunikation rechtssicher zu machen?',
    subheadline: 'Starten Sie jetzt Ihre kostenlose 3-monatige Pilotphase.',
    primaryCta: 'Pilot-Programm starten',
    secondaryCta: 'Oder: Demo vereinbaren',
    secondarySubtext: 'für eine 15-Minuten Produktvorstellung',
    features: [
      {
        icon: 'calendar',
        text: 'Persönliche Einrichtung inklusive'
      },
      {
        icon: 'shield',
        text: '100% DSGVO-konform'
      },
      {
        icon: 'euro',
        text: '3 Monate kostenlos testen'
      }
    ]
  },
  en: {
    headline: 'Ready to Make Your WhatsApp Communication Legally Compliant?',
    subheadline: 'Start your free 3-month pilot phase now.',
    primaryCta: 'Start Pilot Program',
    secondaryCta: 'Or: Schedule Demo',
    secondarySubtext: 'for a 15-minute product presentation',
    features: [
      {
        icon: 'calendar',
        text: 'Personal setup included'
      },
      {
        icon: 'shield',
        text: '100% GDPR-compliant'
      },
      {
        icon: 'euro',
        text: '3 months free trial'
      }
    ]
  }
};

const t = content[lang];
---

<section id="contact" class="py-20 px-4 bg-gradient-to-br from-primary-700 via-primary-800 to-primary-900 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>

  <div class="max-w-5xl mx-auto text-center relative z-10">
    <!-- Header -->
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
      {t.headline}
    </h2>
    <p class="text-xl md:text-2xl text-gray-100 mb-12 max-w-3xl mx-auto">
      {t.subheadline}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-12">
      <!-- Primary CTA -->
      <a
        href={`/${lang}#contact-form`}
        class="group bg-accent-500 hover:bg-accent-600 text-white font-bold text-lg px-10 py-5 rounded-xl shadow-2xl hover:shadow-accent-500/50 transition-all duration-300 transform hover:scale-105 inline-flex items-center gap-3"
      >
        {t.primaryCta}
        <svg class="w-6 h-6 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>

      <!-- Secondary CTA -->
      <div class="text-center">
        <a
          href={`/${lang}#contact-form`}
          class="text-white hover:text-accent-300 font-semibold text-lg underline underline-offset-4 transition-colors"
        >
          {t.secondaryCta}
        </a>
        <p class="text-gray-300 text-sm mt-1">{t.secondarySubtext}</p>
      </div>
    </div>

    <!-- Supporting Features -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-16">
      {t.features.map((feature) => (
        <div class="flex flex-col items-center text-center bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-6 border border-white border-opacity-20 hover:bg-opacity-15 transition-all duration-300">
          <!-- Icon -->
          <div class="mb-4">
            <div class="w-16 h-16 rounded-full bg-accent-500 bg-opacity-20 flex items-center justify-center">
              {feature.icon === 'calendar' && (
                <svg class="w-8 h-8 text-accent-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              )}
              {feature.icon === 'shield' && (
                <svg class="w-8 h-8 text-accent-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              )}
              {feature.icon === 'euro' && (
                <svg class="w-8 h-8 text-accent-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.121 15.536c-1.171 1.952-3.07 1.952-4.242 0-1.172-1.953-1.172-5.119 0-7.072 1.171-1.952 3.07-1.952 4.242 0M8 10.5h4m-4 3h4m9-1.5a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
            </div>
          </div>
          <!-- Text -->
          <p class="text-white font-semibold text-lg">{feature.text}</p>
        </div>
      ))}
    </div>

    <!-- Trust Badge -->
    <div class="mt-12 inline-flex items-center gap-3 bg-white bg-opacity-10 backdrop-blur-sm rounded-full px-6 py-3 border border-white border-opacity-20">
      <svg class="w-6 h-6 text-green-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <span class="text-white font-medium">
        {lang === 'de'
          ? 'Keine Kreditkarte erforderlich • Jederzeit kündbar'
          : 'No credit card required • Cancel anytime'}
      </span>
    </div>
  </div>
</section>

<style>
  /* Pulse animation for primary button */
  @keyframes pulse-shadow {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(249, 115, 22, 0.7);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(249, 115, 22, 0);
    }
  }

  .group:hover {
    animation: pulse-shadow 1.5s infinite;
  }
</style>
