---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang?: 'de' | 'en';
}

const { lang = 'de' } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section headline -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {t('pain.headline')}
      </h2>
    </div>

    <!-- Pain point cards -->
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Card 1: DSGVO-Risiko -->
      <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-8 space-y-4">
        <div class="flex items-center justify-center w-16 h-16 bg-red-100 rounded-full">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900">
          {t('pain.card1.title')}
        </h3>
        <p class="text-gray-600 leading-relaxed">
          {t('pain.card1.text')}
        </p>
      </div>

      <!-- Card 2: Verlorene Dokumentation -->
      <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-8 space-y-4">
        <div class="flex items-center justify-center w-16 h-16 bg-orange-100 rounded-full">
          <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l6 6"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900">
          {t('pain.card2.title')}
        </h3>
        <p class="text-gray-600 leading-relaxed">
          {t('pain.card2.text')}
        </p>
      </div>

      <!-- Card 3: Manuelles Bautagebuch -->
      <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-8 space-y-4">
        <div class="flex items-center justify-center w-16 h-16 bg-red-100 rounded-full">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900">
          {t('pain.card3.title')}
        </h3>
        <p class="text-gray-600 leading-relaxed">
          {t('pain.card3.text')}
        </p>
      </div>
    </div>
  </div>
</section>
