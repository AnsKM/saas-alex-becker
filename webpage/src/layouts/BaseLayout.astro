---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  lang?: 'de' | 'en';
}

const { 
  title = 'BauChat Pro', 
  description = 'Die WhatsApp-Alternative f√ºr rechtssichere Baudokumentation',
  lang = 'de'
} = Astro.props;

const currentUrl = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : new URL(Astro.url.pathname, 'https://yourdomain.com');
const canonicalUrl = currentUrl.href;

// Alternate language URLs
const baseUrl = Astro.site ? Astro.site.href : 'https://yourdomain.com';
const alternateLangUrl = lang === 'de'
  ? new URL(Astro.url.pathname.replace('/de/', '/en/'), baseUrl).href
  : new URL(Astro.url.pathname.replace('/en/', '/de/'), baseUrl).href;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- hreflang tags for internationalization -->
    <link rel="alternate" hreflang="de" href={lang === 'de' ? canonicalUrl : alternateLangUrl} />
    <link rel="alternate" hreflang="en" href={lang === 'en' ? canonicalUrl : alternateLangUrl} />
    <link rel="alternate" hreflang="x-default" href={lang === 'de' ? canonicalUrl : alternateLangUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.jpg', baseUrl).href} />
    <meta property="og:locale" content={lang === 'de' ? 'de_DE' : 'en_US'} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/og-image.jpg', baseUrl).href} />
  </head>
  <body>
    <slot />
  </body>
</html>
